<h1>Todo list</h1>

<ul>
  <% @tasks.each do |task| %>
    <li>
    <%= link_to task.title, task_path(task) %>
    <p><%= link_to "Edit a task", edit_task_path(task) %></p>
    <p><%= link_to "Delete a task", task_path(task), method: :delete, data: { confirm: "Are you sure?" } %></p>
    </li>
  <% end %>
</ul>

<p><%= link_to "Add a new task", new_task_path %></p>
